{
  "manifest_version": 3,
  "name": "Gittimus",
  "version": "0.0.1",
  "description": "Version Control for Optimus",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "*://inshoppingcart.inone.useinsider.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content/injector.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://*/*"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/index.js"
  }
}
